    },
    "backend": {
      "packageDeps": ["express", "fastify", "hono", "@nestjs/core", "django", "flask", "fastapi"]
    },
    "monorepo": {
      "dirs": ["backend", "frontend"],
      "packageFields": ["workspaces"]
    }
  },
  "profiles": {
    "base": {
      "plugins": [
        "commit-commands@claude-plugins-official",
        "superpowers@claude-plugins-official",
